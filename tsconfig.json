{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es6",
    "baseUrl": "src",
    "paths": {
      "src/*": [ "*" ]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "test", "storybook"]
}
