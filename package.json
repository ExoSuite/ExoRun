{
  "name": "ExoRun",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "clean": "rm -rf $TMPDIR/react-*",
    "clean:android": "cd android/ && ./gradlew clean && cd .. && react-native run-android",
    "test": "jest",
    "test-ci": "jest --coverage --ci --reporters=default --reporters=jest-junit",
    "compile": "tsc --noEmit -p . --pretty",
    "format": "npm-run-all format:*",
    "format:js": "prettier --write {.,**}/*.js",
    "format:json": "prettier --write {.,**}/*.json",
    "format:md": "prettier --write {.,**}/*.md",
    "format:ts": "prettier --write {.,**}/*.{ts,tsx} && tslint --fix -p .",
    "lint": "npm-run-all lint:*",
    "lint:ts": "tslint -p .",
    "postinstall": "solidarity",
    "hack:types-react-navigation": "rimraf node_modules/@types/react-navigation/node_modules/@types",
    "hack:types-react-native": "rimraf node_modules/@types/react-native/node_modules/@types",
    "hack:types-react-test-renderer": "rimraf node_modules/@types/react-test-renderer/node_modules/@types",
    "hack:lottie-react-native": "./hacks/lottie-react-native-hack.sh",
    "hack:viro-react": "./hacks/viro-react-hack.sh",
    "hack:androidX": "sh android/patch/patch-androidX.sh",
    "reload-android": "adb shell input text 'RR'",
    "reactotron-android": "adb reverse tcp:9090 tcp:9090",
    "patch": "patch-package",
    "prepare": "npm-run-all patch hack:*",
    "postversion": "react-native-version"
  },
  "dependencies": {
    "apisauce": "1.0.2",
    "autobind-decorator": "^2.4.0",
    "es6-symbol": "^3.1.1",
    "i18n-js": "^3.2.1",
    "jsc-android": "^236355.1.1",
    "jwt-decode": "^2.2.0",
    "lodash.includes": "^4.3.0",
    "lodash.isempty": "^4.4.0",
    "lodash.throttle": "4.1.1",
    "lottie-react-native": "^2.5.11",
    "mobx": "5.9.0",
    "mobx-react": "5.4.3",
    "mobx-state-tree": "3.11.0",
    "node-libs-react-native": "^1.0.3",
    "ramda": "0.26.1",
    "react": "16.6.3",
    "react-native": "0.58.6",
    "react-native-animatable": "^1.3.1",
    "react-native-config": "^0.11.7",
    "react-native-gesture-handler": "1.1.0",
    "react-native-keyboard-spacer": "^0.4.1",
    "react-native-keychain": "3.1.1",
    "react-native-localize": "^1.1.0",
    "react-native-modal": "^9.0.0",
    "react-native-sound": "^0.10.12",
    "react-native-splash-screen": "3.2.0",
    "react-native-vector-icons": "6.3.0",
    "react-navigation": "3.3.2",
    "react-viro": "^2.13.0",
    "reactotron-mst": "3.1.0",
    "reactotron-react-native": "^3.2.1",
    "validate.js": "0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-proposal-optional-catch-binding": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/runtime": "^7.3.4",
    "@storybook/addon-storyshots": "^4.1.12",
    "@storybook/react-native": "^4.1.13",
    "@types/jest": "24.0.9",
    "@types/node": "^11.10.5",
    "@types/ramda": "0.26.0",
    "@types/react": "16.8.7",
    "@types/react-native": "0.57.38",
    "@types/react-navigation": "3.0.4",
    "@types/react-test-renderer": "16.8.1",
    "@types/validate.js": "0.11.0",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "ignite-bowser": "^3.0.0",
    "ignite-vector-icons": "^1.1.1",
    "jest": "24.3.0",
    "jest-junit": "^6.3.0",
    "jest-preset-ignite": "0.6.1",
    "metro-react-native-babel-preset": "0.53.0",
    "npm-run-all": "4.1.5",
    "patch-package": "6.0.5",
    "postinstall-prepare": "1.0.1",
    "prettier": "1.16.4",
    "react-devtools-core": "3.6.1",
    "react-dom": "16.8.4",
    "react-native-typescript-transformer": "1.2.12",
    "react-native-version": "^2.6.8",
    "react-powerplug": "1.0.0",
    "react-test-renderer": "16.8.4",
    "rimraf": "2.6.3",
    "solidarity": "2.3.1",
    "tslint": "5.13.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.3.3333"
  },
  "jest": {
    "preset": "jest-preset-ignite"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "all"
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "outputDirectory": "./test-reports",
    "outputName": "./junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "rnpm": {
    "assets": [
      "./app/theme/fonts/",
      "./app/assets"
    ]
  }
}
